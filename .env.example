# DS-PAL Configuration

# Kaggle API credentials (optional — get from kaggle.com/account)
KAGGLE_USERNAME=your_kaggle_username
KAGGLE_KEY=your_kaggle_api_key

# HuggingFace API token (optional — get from huggingface.co/settings/tokens)
HUGGINGFACE_TOKEN=your_huggingface_token

# LLM insights (optional — set provider + key to enable)
LLM_PROVIDER=anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key
LLM_MODEL=

# App settings
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=true
DATABASE_PATH=ds_pal.db
CACHE_DIR=.cache/datasets
MAX_DATASET_ROWS=10000
MAX_FILE_SIZE_MB=50
